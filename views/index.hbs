{{#if user}}
<div id="cardContainer" class="row"></div>
</div>

<div class="row col s12" id="Dashboard">
  <div class="container">
    <div class="col s12">

      <div class="row">
        <div class="col s12 ">
          <div class="card">
            <span class="card-title">Hello {{user.username}}</span>
            <div class="card-content center-align">
              <p>Create your own post by clicking the post button</p>
              <button class="btn waves-effect waves-light " type="submit" name="action">Post
                <i class="material-icons right">create</i>
              </button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

{{else}}
{{/if}}